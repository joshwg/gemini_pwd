[Unit]
Description=Gemini PWD Web Application
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User=geminipwd
Group=geminipwd
WorkingDirectory=/opt/gemini-pwd
ExecStart=/opt/gemini-pwd/gemini-pwd
Environment=PORT=7000
Environment=GIN_MODE=release

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/gemini-pwd
ReadWritePaths=/opt

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=gemini-pwd

[Install]
WantedBy=multi-user.target
